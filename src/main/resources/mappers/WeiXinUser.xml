<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.juchao.weixin.dao.WeiXinUserDao">

    <sql id="weiXinUserColumns">
        a.id,
        a.mobile,
        a.cus_number,
        a.create_time,
        a.update_time,
        a.weixin_id
    </sql>

    <select id="getWeiXinUserByCusNumber" resultType="com.juchao.weixin.entity.WeiXinUser">
        select <include refid="weiXinUserColumns"/>
          from weixin_user a
    </select>
    <select id="getCusNumberByMobile" resultType="com.juchao.weixin.entity.WeiXinUser">
        select cus_number from weixin_user where mobile = #{mobile}

    </select>
    <insert id="insert">
        INSERT INTO weixin_user{
        `mobile` ,
        `cus_number`,
        `create_time,
        `update_time',
        `weixin_id`
        }VALUES {
        #{mobile}
        ,#{cusNumber}
        ,#{createTime}
        ,#{updateTime}
        ,#{weixinId}
        }

    </insert>

</mapper>